<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".makekit_activity.UserModifyActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="회원정보수정"
        android:textSize="30dp"
        android:textStyle="bold" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp">

            <WebView
                android:id="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_user" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:id="@+id/tv_editPeopleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="사진 편집"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="731dp"
            android:orientation="vertical"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayoutUser_Email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:enabled="false"
                    android:hint="이메일"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayoutUser_Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:enabled="true"
                    android:hint="이름"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayoutUser_Pw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_pw"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:hint="비밀번호 (8자 이상)"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                    android:enabled="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayoutUser_PwCheck"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.8"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_pwcheck"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textSize="18dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_pwCheckMsg_user"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayoutUser_Address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:hint="주소입력"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                    android:enabled="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/InputLayoutUser_AddressDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_addressdetail"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_background"
                    android:hint="상세주소입력"
                    android:paddingLeft="10dp"
                    android:textSize="18dp" />

                <Button

                    android:id="@+id/userModiAddress_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/button_background"
                    android:text="주소찾기" />

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayoutUser_Tel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:inputType="phone"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_tel"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/button_background"
                    android:hint="휴대폰"
                    android:maxLength="13"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_fieldCheck_findId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:textColor="@color/red"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayoutUser_Birth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="top"
                android:layout_margin="10dp"
                android:layout_weight="1.5"
                app:errorEnabled="true"    >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginBottom="10dp"
                    >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_birth"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:hint="생일"
                    android:inputType="date"
                    android:maxLength="13"
                    android:textSize="18dp"
                    android:enabled="false"/>

                    <Button
                        android:id="@+id/user_birth_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="40dp"
                        android:text="생년월일"
                        android:background="@drawable/calendar" />


                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/user_update_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:layout_gravity="right"
                android:text="수정완료"
                android:layout_marginBottom="10dp"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>