<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <WebView
            android:id="@+id/order_productImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/order_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="상품명"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배송비"
                />
            <TextView
                android:id="@+id/order_productCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수량1개"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/order_productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100,000원"
                android:gravity="right"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2,500원"
                android:gravity="right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                />

            <TextView
                android:id="@+id/order_productTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="102,500원"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>