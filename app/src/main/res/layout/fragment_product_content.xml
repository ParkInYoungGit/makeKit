<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".makekit_fragment.ProductContentFragment">

    <!-- TODO: Update blank fragment layout -->
<!--    <ViewFlipper-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="200dp"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
                <WebView
                    android:id="@+id/productImage_productviewcontent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />


                <TextView
                    android:id="@+id/productNmae_prodcutviewcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_margin="20dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="판매가"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/productPrice_productviewcontent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />

                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배송방법"
                    />

                <TextView
                    android:id="@+id/productDeliveryMethod_productviewcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="배송비"
                        />

                    <TextView
                        android:id="@+id/productDeliveryPrice_productviewcontent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,500 원"
                        android:layout_marginLeft="40dp"

                        />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="선택 수량"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:backgroundTint="#F1EEEE"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/productContent_productviewcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"

                />

                <WebView
                    android:id="@+id/prdouctdetail_productviewcontent"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    />

        </LinearLayout>
    </ScrollView>
</FrameLayout>